{% extends 'ZIMZIMCategoryProductBundle::layout.html.twig' %}

{% block title %}
    {{ 'views.itemhome.index.title'|trans }}
{% endblock title %}

{% block page %}

    <div class="row">
        <div class="small-12 columns">
            <h1 class="headertitle text-center">
                {{ 'views.itemhome.index.title'|trans }}
            </h1>
        </div>
    </div>

    <div id="owl-demo" class="owl-carousel owl-theme">
        {% for entity in entities %}
            {% include 'ZIMZIMCategoryProductBundle:ItemHome:include/itemhomebox.html.twig' with {'entity': entity} %}
        {% endfor %}
    </div>

    <div class="row">
        <div class="small-12 columns">
            <p class="paratitle">
                {{ 'views.itemhome.index.feel'|trans }}
            </p>
        </div>
    </div>


    <div class="row">
        <div class="small-10 small-centered columns">
            <ul class="small-block-grid-1 medium-block-grid-2">
                <li class="homebox text-center">
                    <h2>
                        {{ 'views.itemhome.index.hometitle1'|trans }}
                    </h2>

                    <p class="parahome">
                        {{ 'views.itemhome.index.homepara1'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle2'|trans }}
                    </h2>

                    <p class="parahome">
                        {{ 'views.itemhome.index.homepara2'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle3'|trans }}
                    </h2>

                    <p class="parahome">
                        {{ 'views.itemhome.index.homepara3'|trans }}
                    </p>
                </li>
                <li class="homebox">
                    <h2>
                        {{ 'views.itemhome.index.hometitle4'|trans }}
                    </h2>

                    <p class="parahome">
                        {{ 'views.itemhome.index.homepara4'|trans }}
                    </p>
                </li>
            </ul>
        </div>
    </div>
{% endblock page %}


{% block javascripts %}

    {{ parent() }}

    <script>
        $(document).ready(function () {

            $("#owl-demo").owlCarousel({

                autoPlay: 3000,
                itemsCustom: [
                    [0, 1],
                    [900, 2],
                    [1200, 3]
                ],
                'addClassActive': true,
                navigation: false
                /*
                 autoPlay: 7000,
                 navigation: false,
                 slideSpeed: 300,
                 paginationSpeed: 400,
                 singleItem: true,
                 'afterAction': function () {
                 return this;
                 },
                 'addClassActive': true,
                 'afterInit': function () {
                 return this;
                 }
                 */
            });

            window.Carousel = $(".owl-carousel").data('owlCarousel');

        });

    </script>
{% endblock javascripts %}

