{% extends '::base.html.twig' %}


{% block title %}
    {{ 'zimzim_categoryproduct_category.index.title'|trans }}
{% endblock title %}


{% block page %}
    <div class="row">
        <div class="small-12 columns">
            <h1 class="text-center headerpagehome">
                Entity
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <table class="width-100 panel">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ entity.content }}</td>
                </tr>
                <tr>
                    <th>Parent</th>
                    <td>{{ entity.parent.name }}</td>
                </tr>
                {% if entity.path != null %}
                    <tr>
                        <th>Image</th>
                        <td><img src="/{{ entity.getWebPath }}"/></td>
                    </tr>
                {% endif %}
                <tr>
                    <th>Updatedat</th>
                    <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="small-12 large-4 columns text-center">
                    <a class="tiny button round" href="{{ path('zimzim_categoryproduct_category') }}">
                        {{ 'link.return'|trans }}
                    </a>
                </div>
                <div class="small-12 large-4 columns text-center">
                    <a class="tiny button round"
                       href="{{ path('zimzim_categoryproduct_category_edit', { 'id': entity.id }) }}">
                        {{ 'button.update'|trans }}
                    </a>
                </div>
                <div class="small-12 large-4 columns text-center">
                    {{ form(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}