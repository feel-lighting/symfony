#!/bin/bash

php /home/%dir%/bin/console $@

for param in $@
do
    if [ $param = "cache:clear" ] || [ $param = "cache:warmup" ]
    then
        chmod -R 0770 /home/%dir%/var/cache
        chown -R %user%:www-data /home/%dir%/var/cache
        chmod -R 0770 /home/%dir%/var/logs
        chown -R %user%:www-data /home/%dir%/var/logs
        break
    fi
done
